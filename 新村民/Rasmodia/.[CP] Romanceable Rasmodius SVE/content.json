{
	"Format": "2.0.0",
	
//Config
	"ConfigSchema": {

    "Portrait Mode": {
        "AllowValues": "32, 12, 9, 7",
        "Default": "12",
        "Description": "选择你的法师肖像的表达式的数量。阅读mod描述了解更多细节。",
    },
    "Override Generic Dialogue": {
        "AllowValues": "true, false",
        "Default": "true",
        "Description": "即使您有UCR，也建议启用。只有当你有多个配偶mod时才禁用，以避免其他配偶像巫师一样说话。",
    },
    "Dialogue": {
        "AllowValues": "standard, integrated",
        "Default": "integrated",
        "Description": "standard是原始拉斯莫德的体验，integrated是集成了原始拉斯莫德与SVE法师对话。我个人推荐integrated，因为它有更多的内容。",
    },
    "Marriage Dialogue": {
        "AllowValues": "standard, integrated",
        "Default": "integrated",
        "Description": "standard是原始的拉斯莫德体验，integrated是整合了原始拉斯莫德与SVE法师的婚姻对话。我个人推荐integrated，因为它有更多的内容。",
    },
    "Ex-Wife mentions": {
        "AllowValues": "enabled, disabled",
        "Default": "enabled",
        "Description": "启用/禁用法师的对话和事件围绕他的前妻，卡洛琳和阿比盖尔。不禁用，但会改变魔法墨水任务线。我强烈建议保持这个功能，因为他的前妻对他的角色知识和香草星露事件非常重要。不过，如果你喜欢的话，还是有选择的。",
    },
    "Event": {
        "AllowValues": "standard, integrated",
        "Default": "integrated",
        "Description": "standard只有原始拉斯莫德事件，integrated是集成了原始拉斯莫德与SVE法师事件的组合。我个人推荐整合，因为它有更多的内容(每个心一个事件)。",
    },
    "Mature Events": {
        "AllowValues": "enabled, disabled",
        "Default": "disabled",
        "Description": "与SVE一样，启用/禁用拉斯莫德编辑以法师相关的SVE成熟事件。如果您不想看到成熟事件，请确保在SVE中也禁用它们。",
    },
    "Wizard Babies": {
        "AllowValues": "true, false",
        "Default": "false",
        "Description": "启用/禁用原始拉斯莫德法师婴儿精灵。",
    },
    "Wizard Age Appearance": {
        "AllowValues": "old, young",
        "Default": "old",
        "Description": "改变巫师的对话以匹配他的外观。这是为那些使用年轻巫师肖像的人准备的。",
    },
    "Farmer Gender": {
        "AllowValues": "male, female, gender neutral",
        "Default": "gender neutral",
        "Description": "改变法师的对话，以正确匹配玩家的性别。",
    },
    "Sprite": {
        "AllowValues": "vanilla, new, disabled",
        "Default": "vanilla",
        "Description": "更改mod加载的法师肖像，或禁用mod加载任何法师肖像。阅读mod描述了解更多细节。",
    },
    "Is a sleeping sprite available": {
        "AllowValues": "true, false",
        "Default": "false",
        "Description": "根据你的肖像表是否包含睡眠的肖像来选择true/false。如果设置为false, mod将会自动替换一个冥想肖像。",
    },
    "Is a pink hair sprite available": {
        "AllowValues": "true, false",
        "Default": "false",
        "Description": "根据你的肖像是否有粉红色的头发姿势/表情来选择true/false。这是用于SVE幻觉神龛的事件。如果设置为false, mod将替换其位置的服装变化。",
    },
}, 

